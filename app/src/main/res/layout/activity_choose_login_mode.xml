<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		>

	<data>
		<variable
				name="vm"
				type="com.tsic.ui.screen.chooseloginmode.CheckUserViewModel"/>
		<variable
				name="activity"
				type="com.tsic.ui.screen.chooseloginmode.ChooseLoginModeActivity"/>
	</data>

	<androidx.coordinatorlayout.widget.CoordinatorLayout
			android:id="@+id/root_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".ui.ChooseLoginModeActivity"
			android:fitsSystemWindows="true"
			>
		<ProgressBar
				android:id="@+id/choose_login_mode_progressBar"
				style="@style/Widget.AppCompat.ProgressBar.Horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:elevation="20dp"
				android:indeterminate="true"
				android:indeterminateTint="@android:color/black"
				android:visibility="invisible"
				/>
		<include
				android:id="@+id/content_layout"
				layout="@layout/content_choose_login_mode"
				app:viewModel="@{vm}"/>

	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
