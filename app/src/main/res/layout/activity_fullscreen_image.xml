<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		>

	<data>

		<variable
				name="url"
				type="String"
				/>
	</data>

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".ui.screen.util_screens.FullscreenImageActivity"
			>

		<com.google.android.material.appbar.AppBarLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:theme="@style/AppTheme.AppBarOverlay.Local"
				>

			<androidx.appcompat.widget.Toolbar
					android:id="@+id/toolbar"
					android:layout_width="match_parent"
					android:layout_height="?android:attr/actionBarSize"
					android:background="@color/colorToolbarTranslucentGreen"
					app:popupTheme="@style/AppTheme.PopupOverlay"
					app:title="@string/app_name"
					/>

		</com.google.android.material.appbar.AppBarLayout>

		<ImageView
				android:id="@+id/imageview_full"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/colorBackGround"
				app:image_url="@{url}"
				tools:src="@drawable/ic_camera"
				/>
	</FrameLayout>
</layout>