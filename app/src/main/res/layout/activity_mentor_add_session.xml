<?xml version="1.0" encoding="utf-8"?>


<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		>

	<data>
		<variable
				name="vm"
				type="com.tsic.ui.screen.mentor_bottom_menu.mysessions.add_session.MentorAddSessionViewModel"
				/>

		<variable
				name="activity"
				type="com.tsic.ui.screen.mentor_bottom_menu.mysessions.add_session.MentorAddSessionActivity"
				/>
	</data>

	<androidx.coordinatorlayout.widget.CoordinatorLayout
			android:id="@+id/root_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/colorBackGround"
			android:fitsSystemWindows="true"
			tools:context=".ui.screen.mentor_bottom_menu.mysessions.add_session.MentorAddSessionActivity"
			>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				>

			<com.google.android.material.appbar.AppBarLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorToolbarTranslucentGreen"
				android:theme="@style/AppTheme.AppBarOverlay.Local"
				>

			<androidx.appcompat.widget.Toolbar
					android:id="@+id/toolbar"
					android:layout_width="match_parent"
					android:layout_height="?android:attr/actionBarSize"
					app:popupTheme="@style/AppTheme.PopupOverlay"
					android:background="@color/colorToolbarGreen"
					/>

		</com.google.android.material.appbar.AppBarLayout>

			<ProgressBar
					android:id="@+id/progressBar"
					style="@style/Widget.AppCompat.ProgressBar.Horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:elevation="20dp"
					android:background="@color/colorBackGround"
					android:indeterminate="true"
					android:indeterminateTint="@color/colorText"
					android:visibility="invisible"
					/>

		<include
				android:id="@+id/content_layout"
				layout="@layout/content_mentor_add_session"
				app:viewModel="@{vm}"
				/>
		</LinearLayout>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
