<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		>

	<data>

		<variable
				name="viewModel"
				type="com.tsic.ui.screen.chat.TwilioChatViewModel"
				/>
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/root_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/bg_all_white"
			android:fitsSystemWindows="true"
			tools:context=".ui.screen.chat.TwilioChatActivity"
			>
		<include
				android:id="@+id/content_chat_message"
				layout="@layout/content_twilio_chat"
				app:viewModel="@{viewModel}"
				/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>