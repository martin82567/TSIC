<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		>

	<data>

		<variable
				name="activity"
				type="com.tsic.ui.screen.videocallscreen.VideoCallActivity"
				/>
	</data>

	<androidx.coordinatorlayout.widget.CoordinatorLayout
			android:id="@+id/root_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fitsSystemWindows="true"
			android:keepScreenOn="true"
			tools:context=".ui.VideoCallScreenActivity"
			>

		<include
				android:id="@+id/content_layout"
				layout="@layout/content_video_call_screen"
				/>

		<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:id="@+id/btn_disconnect"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end|bottom"
				android:layout_marginRight="16dp"
				android:layout_marginBottom="24dp"
				android:clickable="true"
				app:backgroundTint="@color/quantum_error_light"
				app:srcCompat="@drawable/ic_call_end_white_24px"
				app:tint="@color/colorBackGround"
				/>


	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
