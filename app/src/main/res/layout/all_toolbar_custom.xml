<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="50dp">

	    <ImageView
			    android:id="@+id/toolbar_icon"
			    android:layout_width="50dp"
			    android:layout_height="match_parent"
			    android:padding="5dp"
			    android:src="@drawable/ic_menu"
			    app:layout_constraintStart_toStartOf="parent"
			    android:layout_marginStart="8dp"
			    android:layout_marginTop="8dp"
			    app:layout_constraintTop_toTopOf="@+id/toolbar_add_journal"
			    tools:tint="@android:color/holo_green_dark"
			    android:layout_marginBottom="8dp"
			    app:layout_constraintBottom_toBottomOf="parent"
			    />

	    <TextView
			    android:id="@+id/toolbar_title"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    tools:text="Title"
			    android:textSize="16sp"
			    android:textColor="@android:color/white"
			    tools:textColor="@android:color/black"
			    android:layout_marginStart="8dp"
			    app:layout_constraintTop_toTopOf="parent"
			    android:layout_marginBottom="8dp"
			    android:textStyle="bold"
			    app:layout_constraintBottom_toBottomOf="parent"
			    android:layout_marginEnd="8dp"
			    app:layout_constraintStart_toEndOf="@+id/toolbar_icon"
			    app:layout_constraintEnd_toStartOf="@+id/toolbar_add_journal"
			    />

	    <TextView
			    android:id="@+id/toolbar_add_journal"
			    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
			    android:layout_alignParentEnd="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Add"
			    android:visibility="gone"
			    tools:visibility="visible"
			    android:textSize="14sp"
			    android:layout_centerVertical="true"
			    android:paddingLeft="20dp"
			    android:paddingRight="20dp"
			    android:paddingTop="4dp"
			    android:paddingBottom="4dp"
			    android:textColor="@android:color/white"
			    tools:textColor="@android:color/black"
			    android:layout_marginEnd="8dp"
			    app:layout_constraintEnd_toEndOf="parent"
			    app:layout_constraintBottom_toBottomOf="@+id/toolbar_title"
			    android:layout_marginBottom="8dp"
			    app:layout_constraintTop_toTopOf="@+id/toolbar_title"
			    />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>