<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clOneDayLayout"
    android:layout_margin="1dp">

    <TextView
        android:id="@+id/clOneDayText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="22"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:background="@color/white" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginBottom="7dp"
    android:layout_gravity="bottom|center">
    <View
        android:id="@+id/awaitingDotView"
        android:layout_width="4dp"
        android:layout_margin="1dp"
        android:layout_height="4dp"
        android:background="@drawable/session_awaiting_bg"
        android:visibility="gone" />

    <View
        android:id="@+id/confirmationDotView"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_margin="1dp"
        android:background="@drawable/session_confirmation_bg"
        android:visibility="gone"

        />

    <View
        android:id="@+id/passedDotView"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_margin="1dp"
        android:background="@drawable/session_passed_bg"
        android:visibility="gone"

        />
</LinearLayout>

</FrameLayout>



