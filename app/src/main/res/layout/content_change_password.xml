<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		>

	<data>

		<import type="android.view.View" />

		<variable
				name="viewModel"
				type="com.tsic.ui.screen.changepassword.ChangePasswordViewModel"
				/>
	</data>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_all_white"
			android:fillViewport="true"
			android:gravity="center"
			android:orientation="vertical"
			android:paddingStart="30dp"
			android:paddingEnd="30dp"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			tools:context=".ui.screen.changepassword.ChangePasswordActivity"
			tools:showIn="@layout/activity_change_password"
			>

		<ImageView
				android:layout_width="300dp"
				android:layout_height="200dp"
				android:src="@drawable/logo_3x"
				android:layout_gravity="center"
				/>


		<com.marlonmafra.android.widget.EditTextPassword
				android:id="@+id/current_pass"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:hint="Current password"
				android:textColor="@color/colorText"
				android:textColorHint="@color/colorSubText"
				android:inputType="textPassword"
				android:text="@={viewModel.current_password}"
				/>

		<com.marlonmafra.android.widget.EditTextPassword
				android:id="@+id/new_password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:hint="New password"
				android:textColor="@color/colorText"
				android:textColorHint="@color/colorSubText"
				android:inputType="textPassword"
				app:passwordToggleEnabled="true"
				android:text="@={viewModel.new_password}"
				/>

		<com.marlonmafra.android.widget.EditTextPassword
				android:id="@+id/confirm_password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:textColor="@color/colorText"
				android:textColorHint="@color/colorSubText"
				android:hint="Re-type password"
				android:inputType="textPassword"
				android:text="@={viewModel.retype_password}"
				/>

		<Button
				android:id="@+id/submit_btn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:background="@drawable/bg_all_curved"
				android:text="Change Password"
				android:textColor="@color/cardview_light_background"
				/>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="@string/under_development"
				android:textColor="@android:color/holo_red_dark"
				android:textSize="16sp"
				android:visibility="gone"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				/>
	</LinearLayout>
</layout>
