<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		>

	<data>

		<import type="android.view.View" />

		<variable
				name="viewModel"
				type="com.tsic.ui.screen.mentee_bottom_menu.mymeeting.MenteeMyMeetingViewModel"
				/>
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true"
			android:orientation="vertical"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			tools:context=".ui.screen.mentee_bottom_menu.mymeeting.MenteeMyMeetingActivity"
			tools:showIn="@layout/activity_mentee_my_meeting"
			>

		<ImageView
				android:id="@+id/imageView"
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:background="@drawable/bg_all_curved_toolbar"
				android:elevation="10dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				/>

		<androidx.cardview.widget.CardView
				android:id="@+id/cardView3"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="4dp"
				android:layout_marginTop="4dp"
				android:layout_marginEnd="4dp"
				android:backgroundTint="@color/colorNavy"
				app:cardCornerRadius="10dp"
				app:cardElevation="11dp"
				app:contentPadding="3dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				>

			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:text="Notice: System data, video, audio, and chats are recorded, actively monitored, and archived for safety and security purposes. Not for public distribution."
					android:textAlignment="center"
					android:textColor="@color/quantum_white_100"
					android:textSize="10sp"
					/>

		</androidx.cardview.widget.CardView>

		<ImageView
				android:id="@+id/imageView8"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:layout_gravity="end|bottom"
				android:layout_marginTop="45dp"
				android:background="@drawable/logo_tsic"
				android:elevation="15dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="@+id/imageView"
				/>

		<ScrollView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/imageView8"
				>

			<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/imageView8"
					>

				<ToggleButton
						android:id="@+id/toggleSessionBtn"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginRight="30dp"
						android:layout_marginBottom="8dp"
						android:background="@drawable/toggle_session_drawable"
						android:textColor="@android:color/white"
						android:visibility="visible"
						android:checked="true"
						android:textOff=""
						android:textOn=""
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toEndOf="parent"
						app:layout_constraintHorizontal_bias="1.0"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintBottom_toTopOf="@+id/view"


						/>

				<View
						android:id="@+id/view"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginStart="8dp"
						android:layout_marginEnd="8dp"
						android:layout_marginTop="8dp"
						android:background="@color/colorLightBlack"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintHorizontal_bias="0.0"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@+id/toggleSessionBtn"

						/>

				<TextView
						android:id="@+id/tv_awaiting_mentee_confirmation"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="8dp"
						android:layout_marginTop="8dp"
						android:text="Awaiting My Confirmation"
						android:textColor="@color/quantum_deeporange900"
						android:visibility="gone"
						android:textSize="16sp"
						app:layout_constraintEnd_toStartOf="@+id/tv_awaiting_mentee_confirmation_view_all"
						app:layout_constraintHorizontal_bias="0.5"
						app:layout_constraintHorizontal_chainStyle="spread_inside"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@+id/view"
						/>

				<TextView
						android:id="@+id/tv_awaiting_mentee_confirmation_view_all"
						android:layout_width="wrap_content"
						android:layout_height="0dp"
						android:layout_marginEnd="16dp"
						android:gravity="center"
						android:visibility="gone"
						android:text="View All"
						android:textColor="@color/quantum_deeporange900"
						android:textSize="16sp"
						app:layout_constraintBottom_toTopOf="@+id/rv_awaiting_mentee_confirmation"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintHorizontal_bias="0.5"
						app:layout_constraintStart_toEndOf="@+id/tv_awaiting_mentee_confirmation"
						app:layout_constraintTop_toBottomOf="@+id/view"
						/>

				<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/rv_awaiting_mentee_confirmation"
						android:layout_width="0dp"
						android:layout_height="400dp"
						android:layout_marginTop="8dp"
						android:visibility="gone"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@+id/tv_awaiting_mentee_confirmation"
						/>

				<TextView
						android:id="@+id/tv_awaiting_session_occurrence"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="8dp"
						android:layout_marginTop="16dp"
						android:text="Awaiting Session Occurrence"
						android:textColor="@color/quantum_deeporange900"
						android:textSize="16sp"
						app:layout_constraintEnd_toStartOf="@+id/tv_awaiting_session_occurrence_view_all"
						android:visibility="gone"
						app:layout_constraintHorizontal_bias="0.5"
						app:layout_constraintHorizontal_chainStyle="spread_inside"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@+id/rv_awaiting_mentee_confirmation"
						/>

				<TextView
						android:id="@+id/tv_awaiting_session_occurrence_view_all"
						android:layout_width="wrap_content"
						android:layout_height="0dp"
						android:layout_marginEnd="16dp"
						android:gravity="center"
						android:text="View All"
						android:visibility="gone"
						android:textColor="@color/quantum_deeporange900"
						android:textSize="16sp"
						app:layout_constraintBottom_toTopOf="@+id/rv_awaiting_session_occurrence"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintHorizontal_bias="0.5"
						app:layout_constraintStart_toEndOf="@+id/tv_awaiting_session_occurrence"
						app:layout_constraintTop_toBottomOf="@+id/rv_awaiting_mentee_confirmation"
						app:layout_constraintVertical_bias="0.0"
						/>

				<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/rv_awaiting_session_occurrence"
						android:layout_width="0dp"
						android:visibility="gone"
						android:layout_height="400dp"
						android:layout_marginTop="8dp"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@+id/tv_awaiting_session_occurrence"
						/>

				<include
						android:id="@+id/calendarLayout"
						layout="@layout/calendar_layout"
						/>


			</androidx.constraintlayout.widget.ConstraintLayout>
		</ScrollView>
	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
