<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		>

	<data>

		<variable
				name="viewModel"
				type="com.tsic.ui.screen.mentee_bottom_menu.myuploads.upload_report.MenteeUploadReportViewModel"
				/>

		<variable
				name="activity"
				type="com.tsic.ui.screen.mentee_bottom_menu.myuploads.upload_report.MenteeUploadReportActivity"
				/>
	</data>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:fillViewport="true"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			tools:context=".ui.screen.mentee_drawer_menu.journal.add_journal.MenteeAddJournalActivity"
			>

		<androidx.cardview.widget.CardView
				android:id="@+id/cardView3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginBottom="6dp"
				android:backgroundTint="@color/colorNavy"
				app:cardCornerRadius="10dp"
				app:cardElevation="11dp"
				app:contentPadding="3dp"
				>

			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:text="Notice: System data, video, audio, and chats are recorded, actively monitored, and archived for safety and security purposes. Not for public distribution."
					android:textAlignment="center"
					android:textColor="@color/quantum_white_100"
					android:textSize="10sp"
					/>

		</androidx.cardview.widget.CardView>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="10dp"
				>

			<androidx.cardview.widget.CardView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					app:cardBackgroundColor="@color/colorCardBackground"
					app:cardCornerRadius="5dp"
					app:contentPadding="10dp"
					>

				<EditText
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_gravity="center_vertical"
						android:background="@android:color/transparent"
						android:hint="Title"
						android:textColor="@color/colorText"
						android:textColorHint="@color/colorSubText"
						android:text="@={viewModel.reportName}"
						android:textSize="16dp"
						android:textStyle="normal"
						android:maxLength="30"
						/>
			</androidx.cardview.widget.CardView>

			<ImageView
					android:id="@+id/btn_upload"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_marginStart="5dp"
					android:background="@drawable/ic_upload_"
					/>

		</LinearLayout>


		<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="400dp"
				android:layout_marginTop="5dp"
				android:layout_margin="10dp"
				app:cardCornerRadius="5dp"
				app:cardBackgroundColor="@color/colorCardBackground"
				app:contentPadding="10dp"
				>

			<ImageView
					android:id="@+id/upload_report"
					android:layout_width="match_parent"
					android:layout_height="200dp"
					android:layout_gravity="center"
					android:layout_margin="2dp"
					android:src="@drawable/ic_camera"
					app:image_url="@{viewModel.imageUpload}"
					/>
		</androidx.cardview.widget.CardView>

	</LinearLayout>
</layout>
