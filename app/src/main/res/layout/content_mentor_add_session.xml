<?xml version="1.0" encoding="utf-8"?>

<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		>

	<data>

		<import type="android.view.View" />

		<variable
				name="viewModel"
				type="com.tsic.ui.screen.mentor_bottom_menu.mysessions.add_session.MentorAddSessionViewModel"
				/>

	</data>


	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/colorBackGround"
			>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				>

			<androidx.cardview.widget.CardView
					android:id="@+id/cardView3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:backgroundTint="@color/colorNavy"
					app:cardCornerRadius="10dp"
					app:cardElevation="11dp"
					app:contentPadding="3dp"
					>

				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="0dp"
						android:text="Notice: System data, video, audio, and chats are recorded, actively monitored, and archived for safety and security purposes. Not for public distribution."
						android:textAlignment="center"
						android:textColor="@color/quantum_white_100"
						android:textSize="10sp"
						/>

			</androidx.cardview.widget.CardView>


			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="20dp"
					>


				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Mentee Name"
						android:textColor="@color/colorText"
						/>

				<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardBackgroundColor="@color/colorCardBackground"
						app:cardCornerRadius="5dp"
						>

					<TextView
							android:id="@+id/session_mentee_name"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:background="@null"
							android:hint="Select Mentee Name"
							android:padding="10dp"
							android:text="@={viewModel.menteeName}"
							android:textColor="@color/colorText"
							android:textColorHint="@color/colorSubText"

							/>


				</androidx.cardview.widget.CardView>


				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20dp"
						android:text="Date"
						android:textColor="@color/colorText"
						/>

				<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardBackgroundColor="@color/colorCardBackground"
						app:cardCornerRadius="5dp"
						>

					<TextView
							android:id="@+id/session_date"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:hint="Select Date"
							android:inputType="date"
							android:onClick="showDatePicker"
							android:padding="10dp"
							android:text="@={viewModel.date}"
							android:textColor="@color/colorText"
							android:textColorHint="@color/colorSubText"
							/>

				</androidx.cardview.widget.CardView>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20dp"
						android:text="No Show?"
						android:textColor="@color/colorText"
						/>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="start"
						android:orientation="horizontal"
						>

					<CheckBox
							android:id="@+id/noShowCheckBox"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:checked="@={viewModel.isNoShow}"
							/>

					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="time"
							android:padding="10dp"
							android:text="Session didn't happen?"
							android:textColor="@color/colorText"
							android:textColorHint="@color/colorSubText"
							/>

				</LinearLayout>

				<LinearLayout
						android:id="@+id/llSessionDuration"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:visibility="@{viewModel.isNoShow ? View.GONE : View.VISIBLE}"
						>

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="20dp"
							android:text="Session Duration"
							android:textColor="@color/colorText"
							/>

					<androidx.cardview.widget.CardView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:cardBackgroundColor="@color/colorCardBackground"
							app:cardCornerRadius="5dp"
							>


						<TextView
								android:id="@+id/session_time_from"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:hint="Select Duration"
								android:inputType="time"
								android:padding="10dp"
								android:text="@={viewModel.timeFrom}"
								android:textColor="@color/colorText"
								android:textColorHint="@color/colorSubText"
								/>

					</androidx.cardview.widget.CardView>
				</LinearLayout>

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="20dp"
							android:text="Session Method/Location"
							android:textColor="@color/colorText"
							/>

					<androidx.cardview.widget.CardView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:cardBackgroundColor="@color/colorCardBackground"
							app:cardCornerRadius="5dp"
							>


						<TextView
								android:id="@+id/session_method_location"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:hint="Select Session Method/Location"
								android:inputType="time"
								android:padding="10dp"
								android:text="@={viewModel.sessionMethodLocationKey}"
								android:textColor="@color/colorText"
								android:textColorHint="@color/colorSubText"
								/>

					</androidx.cardview.widget.CardView>

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="20dp"
							android:text="Session Type"
							android:textColor="@color/colorText"
							/>

					<androidx.cardview.widget.CardView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:cardBackgroundColor="@color/colorCardBackground"
							app:cardCornerRadius="5dp"
							>


						<TextView
								android:id="@+id/session_type"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:hint="Select Session Type"
								android:inputType="time"
								android:padding="10dp"
								android:text="@={viewModel.sessionTypeKey}"
								android:textColor="@color/colorText"
								android:textColorHint="@color/colorSubText"
								/>

					</androidx.cardview.widget.CardView>

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="20dp"
							android:text="Note"
							android:textColor="@color/colorText"
							/>

					<androidx.cardview.widget.CardView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:cardBackgroundColor="@color/colorCardBackground"
							app:cardCornerRadius="5dp"
							>

						<EditText
								android:id="@+id/session_note"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:background="@null"
								android:gravity="top|start"
								android:hint="Write Note"
								android:inputType="textMultiLine"
								android:lines="5"
								android:maxLength="1024"
								android:padding="10dp"
								android:scrollbars="vertical"
								android:text="@={viewModel.note}"
								android:textColor="@color/colorText"
								android:textColorHint="@color/colorSubText"
								android:textSize="14sp"
								/>

					</androidx.cardview.widget.CardView>
				</LinearLayout>

				<Button
						android:id="@+id/save_session"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="25dp"
						android:background="@drawable/bg_all_curved"
						android:backgroundTint="@color/colorAccent"
						android:text="LOG A SESSION"
						android:textColor="@color/cardview_light_background"
						/>
		</LinearLayout>

	</ScrollView>
</layout>