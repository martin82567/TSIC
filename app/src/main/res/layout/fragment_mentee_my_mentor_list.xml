<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		>

	<data>

		<variable
				name="vm"
				type="com.tsic.ui.screen.mentee_bottom_menu.mychats.my_mentor_list.MenteeMyMentorListViewModel"
				/>

		<variable
				name="fragment"
				type="com.tsic.ui.screen.mentee_bottom_menu.mychats.my_mentor_list.MenteeMyMentorListActivity"
				/>
	</data>

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
			android:id="@+id/swipeRefreshLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_all_white"
			tools:context=".ui.screen.mentee_bottom_menu.mychats.my_mentor_list.MenteeMyMentorListActivity"
			>

		<FrameLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

			<androidx.cardview.widget.CardView
					android:id="@+id/root_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					app:cardCornerRadius="5dp"
					app:cardElevation="5dp"
					>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>

					<ImageView
							android:layout_width="70dp"
							android:layout_height="70dp"
							android:layout_margin="8dp"
							app:image_url_circular_profile="@{vm.profilePic}"
							tools:src="@tools:sample/avatars"
							/>

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical|top"
							android:layout_margin="8dp"
							android:orientation="vertical"
							>

						<TextView
								android:id="@+id/tv_mentor_name"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginBottom="8dp"
								android:text="@{vm.name}"
								android:textSize="18sp"
								tools:text="Name"
								/>

						<TextView
								android:id="@+id/tv_mentor_last_session"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{`Last session: `+vm.lastSessionDate}"
								android:textSize="12sp"
								tools:text="Last session"
								/>

						<TextView
								android:id="@+id/tv_mentor_num_sessions"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{`Number of Sessions: `+vm.sessionCount}"
								android:textSize="12sp"
								tools:text="Number of sessions"
								/>
					</LinearLayout>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</FrameLayout>
	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>