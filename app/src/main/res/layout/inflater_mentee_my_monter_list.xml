<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		>

	<data>

		<import type="android.view.View" />

		<variable
				name="model"
				type="com.tsic.data.model.mentee_api.MyMentorDetails"
				/>
	</data>

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<androidx.cardview.widget.CardView
				android:id="@+id/root_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardCornerRadius="5dp"
				app:cardBackgroundColor="@color/colorCardBackground"
				app:cardElevation="5dp"
				app:strokeColor="@color/colorDividerNavMenu"
				app:strokeWidth="1dp"
				>

			<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					>

				<ImageView
						android:id="@+id/imageView3"
						android:layout_width="70dp"
						android:layout_height="70dp"
						android:layout_margin="8dp"
						app:image_url_circular_profile="@{model.imageUser}"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						tools:src="@tools:sample/avatars"
						/>

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical|top"
						android:layout_margin="8dp"
						android:orientation="vertical"
						app:layout_constraintBottom_toBottomOf="@+id/imageView3"
						app:layout_constraintStart_toEndOf="@+id/imageView3"
						app:layout_constraintTop_toTopOf="@+id/imageView3"
						>

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							>

						<TextView
								android:id="@+id/tv_mentor_name"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginBottom="8dp"
								android:text="@{model.firstname+` `+model.middlename+` `+model.lastname}"
								android:textColor="@color/colorText"
								android:textSize="18sp"
								tools:text="Name"
								/>

						<!--<TextView
								android:id="@+id/tv_mentor_level"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="4dp"
								android:layout_marginBottom="8dp"
								android:text="@{`(`+model.sessionLogLabel+`)`}"
								android:textColor="@color/quantum_orange900"
								android:textSize="16sp"
								android:visibility="@{model.sessionLogCount.equals(`1`)?View.GONE:View.VISIBLE}"
								tools:text="Name"
								/>-->
					</LinearLayout>

					<TextView
							android:id="@+id/tv_mentor_last_session"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{`Last session: `+model.lastSessionDate}"
							android:textColor="@color/colorText"
							android:textSize="12sp"
							tools:text="Last session"
							/>

					<TextView
							android:id="@+id/tv_mentor_num_sessions"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{`Number of Sessions: `+model.sessionLogCount}"
							android:textColor="@color/colorText"
							android:textSize="12sp"
							tools:text="Number of sessions"
							/>
				</LinearLayout>

				<ImageView
						android:id="@+id/iv_badge"
						android:layout_width="60dp"
						android:layout_height="60dp"
						android:layout_marginEnd="8dp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						tools:srcCompat="@drawable/silver_medal"
						/>

				<TextView
						android:id="@+id/tv_no_session"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/quantum_white_text"
						android:textStyle="bold"
						app:layout_constraintBottom_toBottomOf="@+id/iv_badge"
						app:layout_constraintEnd_toEndOf="@+id/iv_badge"
						app:layout_constraintStart_toStartOf="@+id/iv_badge"
						app:layout_constraintTop_toTopOf="@+id/iv_badge"
						app:layout_constraintVertical_bias="0.38"
						tools:text="10"
						/>

			</androidx.constraintlayout.widget.ConstraintLayout>
		</androidx.cardview.widget.CardView>
	</FrameLayout>
</layout>