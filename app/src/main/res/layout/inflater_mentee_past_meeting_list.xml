<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		>

	<data>

		<import type="android.view.View" />

		<variable
				name="model"
				type="com.tsic.data.model.mentee_api.Meeting"
				/>
	</data>

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardBackgroundColor="@color/colorCardBackground"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp"
				>


			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:gravity="center_vertical"
					android:orientation="vertical"
					>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Session requested by:"
						android:textColor="@color/colorSubText"
						android:textSize="14sp"
						/>

				<TextView
						android:id="@+id/tv_mentor_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginBottom="8dp"
						android:text="@{model.creatorName}"
						android:textColor="@color/colorLightGreen"
						android:textSize="18sp"
						tools:text="Name"

						/>

				<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:background="@color/colorSubText"
						/>

				<TextView
						android:id="@+id/tv_mentor_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginBottom="8dp"
						android:text="@{model.title}"
						android:textColor="@color/colorPrimaryDark"
						android:textSize="18sp"
						tools:text="Title"

						/>


				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:orientation="horizontal"
						>

					<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_location_orange"
							/>


					<TextView
							android:id="@+id/tv_mentor_last_session"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dp"
							android:textColor="@color/colorSubText"
							android:textSize="15sp"
							tools:text="Email"

							/>

				</LinearLayout>

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:orientation="horizontal"
						>

					<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_calendar"
							/>


					<TextView
							android:id="@+id/tv_mentor_date"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dp"
							android:text="@{model.date}"
							android:textColor="@color/colorSubText"
							android:textSize="15sp"
							tools:text="Time"
							/>

					<TextView
							android:id="@+id/tv_mentor_time"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/colorSubText"
							android:layout_marginLeft="5dp"
							android:text="@{model.time}"
							android:textSize="15sp"
							tools:text="Time"
							/>


				</LinearLayout>

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:orientation="horizontal"
						>

					<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_job_item_bulb"
							/>

					<TextView

							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="6dp"
							android:textColor="@color/colorSubText"
							android:drawablePadding="10dp"
							android:gravity="center_vertical"
							android:text="@{model.methodValue}"
							/>


				</LinearLayout>

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:orientation="horizontal"
						android:visibility="@{model.description.length()==0?View.GONE:View.VISIBLE}"
						>

					<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_journal_menu"
							/>


					<TextView
							android:id="@+id/tv_mentor_description"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dp"
							android:text="@{model.description}"
							android:textColor="@color/colorSubText"
							android:textSize="15sp"
							tools:text="description"

							/>

				</LinearLayout>


			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</FrameLayout>
</layout>