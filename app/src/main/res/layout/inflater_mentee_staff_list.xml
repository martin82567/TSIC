<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		>

	<data>

		<variable
				name="model"
				type="com.tsic.data.model.mentee_api.MyStaffDetails"
				/>
	</data>

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardBackgroundColor="@color/colorCardBackground"
				app:cardCornerRadius="5dp"
				app:cardElevation="5dp"
				>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					>

				<ImageView
						android:layout_width="70dp"
						android:layout_height="70dp"
						android:layout_margin="8dp"
						android:src="@drawable/ic_avatar_all"
						app:image_url_circular_profile="@{model.imageUser}"
						tools:src="@tools:sample/avatars"
						/>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="8dp"
						android:gravity="center_vertical"
						android:orientation="vertical"
						>

					<TextView
							android:id="@+id/tv_mentor_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{model.name}"
							android:textColor="@color/colorText"
							android:textSize="18sp"
							tools:text="Name"
							/>

					<TextView
							android:id="@+id/tv_mentor_last_session"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{model.email}"
							android:textColor="@color/colorText"
							android:textSize="12sp"
							tools:text="Email"
							/>

					<TextView
							android:id="@+id/tv_staff_chat"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="end"
							android:text="@{model.unreadChat.toString()}"
							android:textColor="@color/colorText"
							android:textSize="18sp"
							android:visibility="invisible"
							app:visibility="@{model.unreadChat.toString()}"
							tools:text="Unread chat"
							/>
				</LinearLayout>


			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</FrameLayout>
</layout>